<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.kurento</groupId>
		<artifactId>kmf-parent-pom</artifactId>
		<version>4.1.1-SNAPSHOT</version>
	</parent>

	<groupId>com.kurento.kmf</groupId>
	<artifactId>kmf-media-connector-test</artifactId>
	<version>${project.parent.version}</version>
	<packaging>jar</packaging>

	<name>kmf-media-connector</name>
	<description>
		Kurento Media Connector Tests

		The Kurento kmf-media-connector project is a Webserver
		frontend for the Thrift API of the Kurento Media Server.
		This project contains the tests for kmf-media-connector
	</description>
	<url>http://www.kurento.com/docs/${project.version}</url>

	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl-2.1.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<scm>
		<url>https://github.com/Kurento/${project.artifactId}</url>
		<connection>scm:git:https://github.com/Kurento/${project.artifactId}.git</connection>
		<developerConnection>scm:git:ssh://git@github.com:Kurento/${project.artifactId}.git</developerConnection>
		<tag>develop</tag>
	</scm>

	<developers>
		<developer>
			<id>kurento.org</id>
			<name>-kurento.org Community</name>
			<organization>Kurento.org</organization>
			<organizationUrl>http://www.kurento.org</organizationUrl>
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>com.kurento.kmf</groupId>
			<artifactId>kmf-media-connector</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>
		<!-- Default values for testing -->
		<profile>
			<id>serverAddress</id>
			<activation>
				<property>
					<name>!kurento.serverAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.serverAddress>localhost</kurento.serverAddress>
			</properties>
		</profile>
		<profile>
			<id>serverPort</id>
			<activation>
				<property>
					<name>!kurento.serverPort</name>
				</property>
			</activation>
			<properties>
				<kurento.serverPort>9090</kurento.serverPort>
			</properties>
		</profile>
		<profile>
			<id>handlerAddress</id>
			<activation>
				<property>
					<name>!kurento.handlerAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerAddress>localhost</kurento.handlerAddress>
			</properties>
		</profile>
		<profile>
			<id>handlerPort</id>
			<activation>
				<property>
					<name>!kurento.handlerPort</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerPort>9191</kurento.handlerPort>
			</properties>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<stylesheetfile>src/main/javadoc/stylesheet.css</stylesheetfile>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<mainClass>com.kurento.kmf.connector.Main</mainClass>
					<layout>ZIP</layout>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>spring-milestones</id>
			<name>Spring Milestones</name>
			<url>http://repo.spring.io/milestone</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>spring-snapshots</id>
			<url>http://repo.spring.io/libs-snapshot</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

</project>
