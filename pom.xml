<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.kurento</groupId>
		<artifactId>kmf-parent-pom</artifactId>
		<version>4.0.0</version>
	</parent>

	<groupId>com.kurento.kmf</groupId>
	<artifactId>kmf-media-connector-test</artifactId>
	<packaging>jar</packaging>

	<name>kmf-media-connector</name>

	<dependencies>
		<dependency>
			<groupId>com.kurento.kmf</groupId>
			<artifactId>kmf-media-connector</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>
		<!-- Default values for testing -->
		<profile>
			<id>serverAddress</id>
			<activation>
				<property>
					<name>!kurento.serverAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.serverAddress>localhost</kurento.serverAddress>
			</properties>
		</profile>
		<profile>
			<id>serverPort</id>
			<activation>
				<property>
					<name>!kurento.serverPort</name>
				</property>
			</activation>
			<properties>
				<kurento.serverPort>9090</kurento.serverPort>
			</properties>
		</profile>
		<profile>
			<id>handlerAddress</id>
			<activation>
				<property>
					<name>!kurento.handlerAddress</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerAddress>localhost</kurento.handlerAddress>
			</properties>
		</profile>
		<profile>
			<id>handlerPort</id>
			<activation>
				<property>
					<name>!kurento.handlerPort</name>
				</property>
			</activation>
			<properties>
				<kurento.handlerPort>9191</kurento.handlerPort>
			</properties>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<stylesheetfile>src/main/javadoc/stylesheet.css</stylesheetfile>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<configuration>
					<mainClass>com.kurento.kmf.connector.Main</mainClass>
					<layout>ZIP</layout>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>repackage</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>spring-milestones</id>
			<name>Spring Milestones</name>
			<url>http://repo.spring.io/milestone</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>spring-snapshots</id>
			<url>http://repo.spring.io/libs-snapshot</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

<scm><tag>kmf-media-connector-test-4.0.0</tag></scm></project>
